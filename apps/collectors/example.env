# Collectors service environment (copy to .env for local dev)

NODE_ENV=development
TZ=Asia/Qatar

# Database
DATABASE_URL=postgresql://bidops:bidops@localhost:5432/bidops?schema=public

# Playwright settings
PLAYWRIGHT_HEADLESS=true

# Collector mode: 'once' (single run) or 'scheduled' (continuous)
COLLECTOR_MODE=once

# Interval between scheduled runs (minutes)
COLLECTOR_INTERVAL_MINUTES=60

# Run only a specific adapter (leave empty for all)
# COLLECTOR_ONLY=sample

# Enable/disable individual adapters
COLLECTOR_SAMPLE_ENABLED=true
COLLECTOR_QATAR_GOV_ENABLED=false
COLLECTOR_MONAQASAT_ENABLED=false
COLLECTOR_MONAQASAT_AVAILABLE_ENABLED=false

# Portal-specific settings
# QATAR_GOV_PORTAL_URL=https://portal.gov.qa
# QATAR_GOV_AWARDS_PATH=/en/awards
MONAQASAT_PORTAL_URL=https://monaqasat.mof.gov.qa
MONAQASAT_AWARDED_PATH=/TendersOnlineServices/AwardedTenders/1
MONAQASAT_AVAILABLE_PATH=/TendersOnlineServices/AvailableMinistriesTenders/1
MONAQASAT_MAX_PAGES=10

# Rate limiting (milliseconds between requests)
COLLECTOR_RATE_LIMIT_MS=1000
QATAR_GOV_DELAY_MS=800

# Headless browser concurrency (1 recommended for caution)
PLAYWRIGHT_MAX_PAGES=1

# Optional proxy for collectors
# HTTP_PROXY=
# HTTPS_PROXY=
