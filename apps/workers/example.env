# Workers service environment (copy to .env for local dev)

NODE_ENV=development
TZ=Asia/Qatar

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Database (Prisma used by workers)
DATABASE_URL=postgresql://bidops:bidops@localhost:5432/bidops?schema=public

# SLA thresholds (days)
SLA_WARN_DAYS=7
SLA_ALERT_DAYS=3
SLA_URGENT_DAYS=1

# Mail (dev via Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=bidops@example.com

# Search (optional)
OPENSEARCH_HOST=http://localhost:9200


